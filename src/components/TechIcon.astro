---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

{
  tag.toLowerCase() === "react" && (
    <svg class="h-4 w-4 text-sky-400" viewBox="0 0 32 32" fill="none">
      <circle cx="16" cy="16" r="2.5" fill="currentColor" />
      <g stroke="currentColor" stroke-width="2">
        <ellipse rx="13" ry="5.5" transform="matrix(.866 .5 -.866 .5 16 16)" />
        <ellipse rx="13" ry="5.5" transform="matrix(-.866 .5 .866 .5 16 16)" />
        <ellipse rx="13" ry="5.5" transform="matrix(0 1 1 0 16 16)" />
      </g>
    </svg>
  )
}

{
  (tag.toLowerCase() === "vue.js" || tag.toLowerCase() === "vue") && (
    <svg class="h-4 w-4 text-emerald-500" viewBox="0 0 32 32" fill="none">
      <path d="M16 4l12 20H4L16 4z" fill="currentColor" />
      <path d="M16 4l8 14H8l8-14z" fill="#34495E" />
    </svg>
  )
}

{
  (tag.toLowerCase() === "node.js" || tag.toLowerCase() === "node") && (
    <svg class="h-4 w-4 text-green-600" viewBox="0 0 32 32" fill="none">
      <path
        d="M16 2.5l13 7.5v12l-13 7.5-13-7.5v-12z"
        stroke="currentColor"
        stroke-width="2"
        fill="none"
      />
      <path d="M16 22V10" stroke="currentColor" stroke-width="2" />
      <circle cx="16" cy="16" r="2" fill="currentColor" />
    </svg>
  )
}

{
  tag.toLowerCase() === "typescript" && (
    <svg class="h-4 w-4 text-blue-500" viewBox="0 0 32 32" fill="none">
      <rect width="32" height="32" rx="6" fill="currentColor" />
      <text x="7" y="23" font-size="15" fill="white" font-family="Arial">
        TS
      </text>
    </svg>
  )
}

{
  (tag.toLowerCase() === "tailwind css" ||
    tag.toLowerCase() === "tailwind") && (
    <svg class="h-4 w-4 text-cyan-400" viewBox="0 0 32 32" fill="none">
      <path
        d="M16 12c2.667-4 8-4 10.667 0C24 8 18.667 8 16 12c-2.667 4-8 4-10.667 0C8 16 13.333 16 16 12z"
        fill="currentColor"
      />
    </svg>
  )
}

{
  tag.toLowerCase() === "firebase" && (
    <svg class="h-4 w-4 text-yellow-500" viewBox="0 0 32 32" fill="none">
      <path d="M6 26L16 6l10 20H6z" fill="currentColor" />
    </svg>
  )
}

{
  tag.toLowerCase() === "mongodb" && (
    <svg class="h-4 w-4 text-green-700" viewBox="0 0 32 32" fill="none">
      <path d="M16 4l2 20-2 4-2-4 2-20z" fill="currentColor" />
    </svg>
  )
}

{
  tag.toLowerCase() === "astro" && (
    <svg class="h-4 w-4 text-orange-400" viewBox="0 0 32 32" fill="none">
      <circle
        cx="16"
        cy="16"
        r="14"
        stroke="currentColor"
        stroke-width="2"
        fill="none"
      />
      <path d="M16 8l6 16h-12l6-16z" fill="currentColor" />
    </svg>
  )
}
